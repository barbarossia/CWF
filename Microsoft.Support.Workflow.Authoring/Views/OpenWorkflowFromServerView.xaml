<Window
    x:Class="Microsoft.Support.Workflow.Authoring.Views.OpenWorkflowFromServerView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:vm="clr-namespace:Microsoft.Support.Workflow.Authoring.ViewModels" xmlns:dc="clr-namespace:Microsoft.Support.Workflow.Authoring.Behaviors" xmlns:convert="clr-namespace:Microsoft.Support.Workflow.Authoring.Common.Converters" xmlns:t="http://schemas.telerik.com/2008/xaml/presentation"
    mc:Ignorable="d" xmlns:my="clr-namespace:Microsoft.Support.Workflow.Authoring.UIControls"
    Title="Open Project from Server"
    Background="#FFF9F9F9"
    WindowStartupLocation="CenterScreen"
    Height="600"
    Width="800" xmlns:views="clr-namespace:Microsoft.Support.Workflow.Authoring.Views"
    MinHeight="600"
    MinWidth="800" xmlns:res="clr-namespace:Microsoft.Support.Workflow.Authoring.AddIns.Properties;assembly=Microsoft.Support.Workflow.Authoring.AddIns">
    <Window.Resources>
        <convert:InverterBooleanConverter
            x:Key="BooleanInverterConverter" />
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <VisualBrush
                x:Key="SearchHint"
                TileMode="None"
                Stretch="None"
                AlignmentX="Left">
                <VisualBrush.Visual>
                    <Grid
                        Background="White"
                        Width="300">
                        <Image
                            HorizontalAlignment="Left"
                            Margin="2,0,0,0"
                            Width="16"
                            Height="16"
                            Source="../Resources/Images/newsearch.png"></Image>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Margin="20,0,0,0"
                            FontStyle="Italic"
                            Foreground="Black"
                            Opacity="0.5"
                            Text="{x:Static res:Resources.SearchingProjects}" />
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Resources>
        <DockPanel>
            <StackPanel
                Orientation="Horizontal"
                DockPanel.Dock="Top"
                Margin="10,4,5,0">
                <TextBox
                    KeyDown="TextBox_KeyDown"
                    Text="{Binding SearchFilter,UpdateSourceTrigger=PropertyChanged}"
                    Width="300"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Left">
                    <TextBox.Style>
                        <Style
                            TargetType="TextBox">
                            <Style.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition
                                            Property="Text"
                                            Value=""></Condition>
                                        <Condition
                                            Property="IsFocused"
                                            Value="false"></Condition>
                                    </MultiTrigger.Conditions>
                                    <Setter
                                        Property="Background"
                                        Value="{StaticResource SearchHint}" />
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button
                    x:Name="SearchButton"
                    Command="{Binding SearchCommand}"
                    Width="85"
                    Margin="5,0,0,0"
                    Content="{x:Static res:Resources.Search}"></Button>
            </StackPanel>
            <!--Command="{Binding DataContext.SearchCommand,
                                       RelativeSource={RelativeSource FindAncestor,
                                       AncestorType={x:Type views:OpenWorkflowFromServerView}}}"
                                      -->
            <StackPanel
                Margin="6,5,0,0"
                Orientation="Horizontal"
                DockPanel.Dock="Top">
                <ListBox
                    Grid.Column="0"
                    Grid.Row="2"
                    ItemsSource="{Binding EnvFilters}"
                    BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel
                                IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox
                                Content="{Binding Env}"
                                IsChecked="{Binding IsFilted}"></CheckBox>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <Expander
                ExpandDirection="Down"
                Margin="10,5,50,0"
                Header="{x:Static res:Resources.SearchOptions}"
                DockPanel.Dock="Top"
                IsExpanded="False">
                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="5">
                    <TextBlock
                        VerticalAlignment="Center"
                        Margin="10,0,10,0"
                        Text="{x:Static res:Resources.FilterByInput}"></TextBlock>
                    <CheckBox
                        Margin="4"
                        Content="{x:Static res:Resources.Name}"
                        x:Name="NameOption"
                        IsChecked="{Binding FilterByName}" />
                    <CheckBox
                        Margin="4"
                        Content="{x:Static res:Resources.Description}"
                        x:Name="DescriptionOption"
                        IsChecked="{Binding FilterByDescription}" />
                    <CheckBox
                        Margin="4"
                        Content="{x:Static res:Resources.Tags}"
                        x:Name="TagsOption"
                        IsChecked="{Binding FilterByTags}" />
                    <CheckBox
                        Margin="4"
                        Content="{x:Static res:Resources.Type}"
                        x:Name="TypeOption"
                        IsChecked="{Binding FilterByType}" />
                    <CheckBox
                        Margin="4"
                        Content="{x:Static res:Resources.Version}"
                        x:Name="VersionOption"
                        IsChecked="{Binding FilterByVersion}" />
                    <CheckBox
                        Margin="4"
                        Content="{x:Static res:Resources.CreatedBy}"
                        x:Name="CreatedByOption"
                        IsChecked="{Binding FilterByCreatedBy}" />
                </StackPanel>
            </Expander>
            <CheckBox
                Margin="10,4"
                Content="{x:Static res:Resources.ShowLatestVersionsOnly}"
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                x:Name="LatestVersion"
                IsChecked="{Binding FilterOldVersions}"
                Width="Auto"
                FontSize="12"
                FontWeight="Normal"
                BorderThickness="1" />
            <CheckBox
                Margin="10,4"
                Content="{x:Static res:Resources.DownloadProjectDependencies}"
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                x:Name="cbShouldDownloadDependencies"
                IsChecked="{Binding ShouldDownloadDependencies}" />
            <StackPanel
                Orientation="Horizontal"
                DockPanel.Dock="Top">
                <RadioButton
                    Margin="10,4"
                    Content="{x:Static res:Resources.OpenForEditing}"
                    IsChecked="{Binding OpenForEditing}"
                    IsEnabled="{Binding CanEdit}"></RadioButton>
                <RadioButton
                    Margin="10,4"
                    Content="{x:Static res:Resources.OpenForReadonly}"
                    IsChecked="{Binding OpenForEditing, Converter={StaticResource BooleanInverterConverter}}"></RadioButton>
            </StackPanel>
            <Grid
                DockPanel.Dock="Bottom"
                Margin="10,0,0,0">
                <my:WorkflowDataPaging
                    DataContext="{Binding DataPagingVM}"></my:WorkflowDataPaging>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,5,10,5"
                    HorizontalAlignment="Right">
                    <Button
                        Name="OpenButton"
                        Content="{x:Static res:Resources.Open}"
                        Command="{Binding OpenSelectedWorkflowCommand}"
                        Height="28"
                        Width="115"
                        Click="OpenButton_Click"></Button>
                    <Button
                        Width="115"
                        Margin="5,0,0,0"
                        IsCancel="True"
                        Content="{x:Static res:Resources.Cancel}"
                        Height="28" />
                </StackPanel>
            </Grid>
            <DataGrid
                Margin="10,5,10,5"
                IsReadOnly="True"
                SelectionUnit="FullRow"
                AlternatingRowBackground="#FFF9F9F9"
                Background="#FFFFFFFF"
                BorderBrush="#FF999999"
                HorizontalGridLinesBrush="#FFCCCCCC"
                RowHeight="28"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                GridLinesVisibility="Horizontal"
                SelectedItem="{Binding SelectedWorkflow, Mode=OneWayToSource}"
                ItemsSource="{Binding WorkflowsView.View}"
                Sorting="WorkflowsGridSorting"
                x:Name="WorkflowsGrid"
                SelectionMode="Single"
                IsSynchronizedWithCurrentItem="True"
                CanUserResizeRows="False"
                DockPanel.Dock="Top"
                VerticalContentAlignment="Top">
                <DataGrid.RowStyle>
                    <Style
                        TargetType="{x:Type DataGridRow}">
                        <EventSetter
                            Event="Loaded"
                            Handler="WorkflowsGridRowLoaded"></EventSetter>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.Name}"
                        MinWidth="200"
                        Binding="{Binding Name}" />
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.Version}"
                        MinWidth="75"
                        Binding="{Binding Version}" />
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.Type}"
                        MinWidth="150"
                        Binding="{Binding WorkflowTypeName}" />
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.Environment}"
                        MinWidth="150"
                        Binding="{Binding Environment}" />
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.Description}"
                        MinWidth="250"
                        Binding="{Binding Description}" />
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.CreatedBy}"
                        MinWidth="150"
                        Binding="{Binding Path=InInsertedByUserAlias}" />
                    <DataGridTextColumn
                        Header="{x:Static res:Resources.Tags}"
                        MinWidth="75"
                        Binding="{Binding MetaTags}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <t:RadBusyIndicator
            Panel.ZIndex="1000"
            Grid.Row="1"
            DisplayAfter="00:00:00"
            FontSize="18"
            IsBusy="{Binding IsBusy}"
            BusyContent="{Binding BusyCaption}"
            Grid.Column="2"
            Grid.ColumnSpan="2" />
    </Grid>
</Window>